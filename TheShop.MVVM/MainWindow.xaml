<Window x:Class="TheShop.MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:TheShop.MVVM.View"
        xmlns:local="clr-namespace:TheShop.MVVM"
        mc:Ignorable="d"
        Title="The Shop" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <view:NavigationView DataContext="{Binding NavigationViewModel}"/>
        <view:ProductDetailView Grid.Column="1" DataContext="{Binding ProductDetailViewModel}"/>
        
    </Grid>
</Window>
